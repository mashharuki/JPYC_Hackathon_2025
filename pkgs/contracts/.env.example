# Base Sepolia Network Configuration
# Base Sepolia RPC URL (default: https://sepolia.base.org)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Sepolia Network Configuration (optional)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_API_KEY

# Private Key for Deployment
# WARNING: Never commit your actual private key to git!
# Generate a new wallet for testnet deployments
PRIVATE_KEY=your_private_key_here

# Infura API Key (optional - for Sepolia network)
INFURA_API_KEY=your_infura_api_key_here

# JPYC Token Address (Base Sepolia)
# Official JPYC ERC20 token deployed on Base Sepolia testnet
JPYC_TOKEN_ADDRESS=0xda683fe053b4344F3Aa5Db6Cbaf3046F7755e5E1

# MultiSig Wallet Owner Addresses
# Owner 1: Lawyer address
MULTISIG_OWNER_1=0x0000000000000000000000000000000000000001

# Owner 2: Family member address
MULTISIG_OWNER_2=0x0000000000000000000000000000000000000002

# Semaphore Verifier Address (optional - will deploy if not provided)
# If Semaphore v4 Verifier is already deployed on Base Sepolia, provide the address
SEMAPHORE_VERIFIER_ADDRESS=

# Gas Reporter Configuration (optional)
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Etherscan API Key for contract verification (optional)
# Base Sepolia uses Basescan
ETHERSCAN_API_KEY=your_basescan_api_key_here

# Default Network
# Options: hardhat, sepolia, baseSepolia
DEFAULT_NETWORK=hardhat
