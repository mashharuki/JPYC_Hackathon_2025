{
  "name": "@jpyc/sdks",
  "version": "2.0.0",
  "private": true,
  "license": "MIT",
  "description": "TypeScript SDKs to build applications on top of JPYC protocol",
  "repository": "https://github.com/jcam1/sdks.git",
  "homepage": "https://github.com/jcam1/sdks.git#readme",
  "packageManager": "yarn@4.7.0",
  "engines": {
    "node": "^20.12.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "format": "prettier -w",
    "format:dry-run": "prettier -c"
  },
  "devDependencies": {
    "husky": "9.0.11",
    "lint-staged": "15.2.9",
    "prettier": "3.3.3"
  },
  "lint-staged": {
    "*.{md,json,yml}": [
      "yarn format README.md"
    ],
    ".github/**/*.{md,json,yml}": [
      "yarn format .github"
    ],
    ".docs/**": [
      "yarn format docs"
    ],
    "packages/core/**/*.{ts,js}": [
      "yarn workspace @jpyc/sdk-core lint",
      "yarn workspace @jpyc/sdk-core format"
    ],
    "packages/core/**/*.{md,json,yml}": [
      "yarn workspace @jpyc/sdk-core format"
    ],
    "packages/react/**/*.{ts,js}": [
      "yarn workspace @jpyc/sdk-react lint",
      "yarn workspace @jpyc/sdk-react format"
    ],
    "packages/react/**/*.{md,json,yml}": [
      "yarn workspace @jpyc/sdk-core format"
    ]
  }
}
